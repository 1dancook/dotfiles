# vim: ft=zsh

# zsh history file
export HISTFILE=~/.zsh_history
export HISTSIZE=25000

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# use neovim as default editor
export EDITOR="nvim"


# bat settings
export BAT_THEME="base16"

# Make Python use UTF-8 encoding for output to stdin, stdout, and stderr.
export PYTHONIOENCODING='UTF-8';

# Highlight section titles in manual pages.
export LESS_TERMCAP_md="${yellow}";

# Donâ€™t clear the screen after quitting a manual page.
# adds coloring for certain things. see man less
export MANPAGER="/usr/bin/less -X -R --use-color -DSky -Ddg -Dub"



# Avoid issues with `gpg` as installed via Homebrew.
# https://stackoverflow.com/a/42265848/96656
# export GPG_TTY=$(tty);
#

# For NNN terminal file browser
export NNN_TMPFILE="${XDG_CONFIG_HOME:-$HOME/.config}/nnn/.lastd"
export NNN_COLORS='4253' #different context colors
export NNN_RESTRICT_NAV_OPEN=0 #must use enter to open
export NNN_USE_EDITOR=1 #use editor, fallback is vim

# For Homebrew
export HOMEBREW_NO_AUTO_UPDATE=1
export HOMEBREW_NO_ENV_HINTS=1
export HOMEBREW_AUTOREMOVE=1
export HOMEBREW_NO_ANALYTICS=1

